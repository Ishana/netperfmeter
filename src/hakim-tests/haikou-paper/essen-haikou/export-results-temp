SP="DFN-Cernet-SP DFN-Unicom-SP Versatel-Cernet-SP Versatel-Unicom-SP"



simulationFolder="/media/storage/svn-git/projects/sctp/sctp-misc/trunk/netperfmeter/src/hakim-tests/haikou-paper/essen-haikou/"
file="/Results/passive.flow-ReceivedByteRate.data"


function extractFile
{
  bzip2 -d  $1.bz2
}

function recompressFile
{
  bzip2 -f  $1
}


for onePath in $SP ; do
  fileName="$simulationFolder$onePath$file"
  echo "extracting file from $onePath"
  extractFile  $fileName
  
  echo "editing file from $onePath"
  newFileName="tmpfile.tmp"
  
  cat $fileName  | \sed -e 's/Single-Path/Singlepath/g' > $newFileName
  mv $newFileName $fileName
  
  echo "recompressing file from $onePath"
  recompressFile $fileName
done

