#"haikou-Disjoint-local-Essen", "haikou-Disjoint-local-Essen-MPTCP-Dissimilar", "haikou-local-Freebsd-SP")# 



SP="haikou-local-Freebsd-SP"
CMT="haikou-Disjoint-local-Essen"
MPTCP="haikou-Disjoint-local-Essen-MPTCP-Dissimilar"



simulationFolder="/media/storage/svn-git/projects/sctp/sctp-misc/trunk/netperfmeter/src/hakim-tests/haikou-paper/local-testbed/dissimilar/08MBit/"
file="/Results/passive.flow-ReceivedByteRate.data"


function extractFile
{
  bzip2 -d  $1.bz2
}

function recompressFile
{
  bzip2 -f  $1
}


for onePath in $SP ; do
  fileName="$simulationFolder$onePath$file"
  echo "extracting file from $onePath"
  extractFile  $fileName
  
  echo "editing file from $onePath"
  newFileName="tmpfile.tmp"
  
  cat $fileName  | \sed -e 's/TCP/Singlepath/g' > $newFileName
  mv $newFileName $fileName
  
  echo "recompressing file from $onePath"
  recompressFile $fileName
done

for onePath in $CMT ; do
  fileName="$simulationFolder$onePath$file"
  echo "extracting file from $onePath"
  extractFile  $fileName
  
  echo "editing file from $onePath"
  newFileName="tmpfile.tmp"
  
 cat $fileName  | \sed -e 's/SCTP/CMT-SCTP/g' > $newFileName
 mv $newFileName $fileName
  
  echo "recompressing file from $onePath"
  recompressFile $fileName
done


for onePath in $MPTCP ; do
  fileName="$simulationFolder$onePath$file"
  echo $fileName
  echo "extracting file from $onePath"
  extractFile  $fileName
  
  echo "editing file from $onePath"
  newFileName="tmpfile.tmp"
  
 cat $fileName  | \sed -e 's/TCP/MPTCP/g' > $newFileName
 mv $newFileName $fileName
  
  echo "recompressing file from $onePath"
  recompressFile $fileName
done



#OptionBufferSplitting  bothsides==>path
#CMTCCVariant like-mptcp==> CMT-SCTP




 