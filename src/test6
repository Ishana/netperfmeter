DIRECTORY=test6-output

if [ -e $DIRECTORY ] ; then
   rm -rf $DIRECTORY
fi
mkdir $DIRECTORY

VALGRIND=
# VALGRIND="valgrind --tool=helgrind"
# VALGRIND=./debug

make -j2 &&  $VALGRIND ./netperfmeter [217.91.155.146]:9000 \
   "-activenodename=Audio-Client" \
   "-passivenodename=Audio-Server" \
   -runtime=30 \
   -config=$DIRECTORY/output.config \
   -vector=$DIRECTORY/output.vec.bz2 \
   -scalar=$DIRECTORY/output.sca.bz2 \
   -sctp \
      const2:const1000:uniform3,0.10:const500:description="Audiodatenstrom #1":maxmsgsize=500:unordered=0.9:unreliable=0.3,rtx_timeout=250:onoff=2,8,12,15,18 \
      exp6:const1200:exp5:const750:description="Audiodatenstrom #2":maxmsgsize=1400:unordered=0.95:unreliable=0.3,rtx_trials=2:onoff=+4+2,+2,+2,+2,+2,+2
   $@
