if [ $# -lt 1 ] ; then
   echo >&2 "Usage: $0 [ID] [Source Network] [Destination Network] [Bandwidth in kbit/s] [Delay in ms]"
   exit 1
fi


# ====== Get parameters =====================================================
SYSTEM=`uname`
ID="$1"
if [ "$2" != "" ] ; then
   NETWORK_SRC="$2"
else
   NETWORK_SRC="0.0.0.0/0"
fi
if [ "$3" != "" ] ; then
   NETWORK_DST="$2"
else
   NETWORK_DST="0.0.0.0/0"
fi
BANDWIDTH=""
DELAY=""
addRule=0
if [ 0$4 -gt 0 ] ; then
   BANDWIDTH="bw $4Kbit/s"
   addRule=1
fi
if [ 0$5 -gt 0 ] ; then
   DELAY="delay $5ms"
   addRule=1
fi


# ====== Linux QoS setup ====================================================
if [ "$SYSTEM" = "Linux" ] ; then
   echo "Linux"
   INTERFACES=`eval "ifconfig -a" 2>/dev/null | sed -ne 's|^\('$cur'[^[:space:][:punct:]]\{1,\}\).*$|\1|p'`
INTERFACES="lo"

   for iface in $INTERFACES ; do
      tc qdisc del dev $iface root handle 9$ID:0
tc qdisc del dev $iface root handle 8333$ID:0
   done
   if [ $addRule -eq 1 ] ; then
echo "ADD.."
      tc qdisc add dev $iface root handle 9$ID:0 prio
echo "x1"
      tc qdisc add dev $iface parent 9$ID:3 handle 8$ID:0 netem delay 200ms
echo "x2"
      tc qdisc add dev $iface parent 8$ID:0 handle 7$ID:0 tbf rate 20kbit buffer 1600 limit 3000
echo "x3"
      tc filter add dev $iface protocol ip parent 9$ID:0 prio 3 u32 match ip src $NETWORK_SRC match ip dst $NETWORK_DST flowid 9$ID:3
   fi
tc -s qdisc ls dev $iface

# ====== FreeBSD QoS setup ==================================================
elif [ "$SYSTEM" = "FreeBSD" ] ; then
   ipfw $ID delete pipe $ID
   if [ $addRule -eq 1 ] ; then
      ipfw add $ID pipe $ID out src-ip $NETWORK_SRC dst-ip $NETWORK_DST
      ipfw pipe $ID config $BANDWIDTH $DELAY queue 20
   fi


# ====== Other systems ======================================================
else
   echo >&2 "ERROR: Unsupported system $SYSTEM!"
   exit 1
fi
